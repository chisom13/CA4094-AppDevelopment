<main class="my-8 mx-8">
    <!-- Product description section -->
    <div class="mx-10 p-2 text-center text-sm">
        <h3 class="font-semibold underline text-lg">Product Details</h3>
        <p><%- product.description %></p>
    </div>
    <!-- Other Product Details -->
    <div class="mx-10 px-3 pt-6 pb-3 border-t-2">
        <div class="flex flex-row items-center text-center text-sm">
            <div class="w-1/4 border-r">
                <p class="font-semibold">Brand</p>
                <span><%- product.type %></span>
            </div>
            <div class="w-1/4 border-r">
                <p class="font-semibold">Release Date</p>
                <span><%- product.release_date %></span>
            </div>
            <div class="w-1/4 border-r">
                <p class="font-semibold">SKU</p>
                <span><%- product.sku %></span>
            </div>
            <div class="w-1/4">
                <p class="font-semibold">Silhouette</p>
                <span><%- product.silhouette %></span>
            </div>
        </div>
    </div>
</main>