<div class=" flex justify-center justify-items-center my-6">
    <!-- User Registration Section -->
    <div class="container w-auto lg:w-7/12 bg-gray-100 rounded-xl max-w-full shadow-lg overflow-hidden ">
        <div class="header px-6 py-2 bg-gray-200 border-b-2 border-gray-400 flex justify-between items-center">
            <h2 class="text-2xl font-bold">Create Account</h2>
            <a href="/login" class="font-semibold flex">
                Or <span class="text-purple-700 text-opacity-50 pl-1"> Login to your Account</span>
            </a>
        </div>
        <form id="form" class="form px-16 py-6">
            <div class="form-control">
                <label for="username">Username</label>
                <input type="text" placeholder="florinpop17" id="username" />
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <small>Error message</small>
            </div>
            <div class="form-control">
                <label for="username">Email</label>
                <input type="email" placeholder="a@florin-pop.com" id="email" />
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <small>Error message</small>
            </div>
            <div class="flex justify-between">
                <div class="form-control">
                    <label for="username">Password</label>
                    <input type="password" placeholder="Password" id="password"/>
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>
                <div class="form-control secondform">
                    <label for="username" class="" >Password check</label>
                    <input type="password" placeholder="Password two" id="password2"/>
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>
            </div>
            <button class="bg-purple border-2 border-purple">Submit</button>
        </form>
    </div>
</div>
<script src="/javascripts/sign-up-validate-form.js"></script>